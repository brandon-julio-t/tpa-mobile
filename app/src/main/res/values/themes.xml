<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BRaVeN" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/darker_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/primary_strong</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- card -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>


        <!-- Customize your theme here. -->
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
<!--        <item name="android:background">@color/dark_gray</item>-->
        <item name="colorOnPrimary">@color/secondary</item>
    </style>


    <!--    CARD    -->

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
<!--        <item name="colorPrimary">@color/white</item>-->
        <item name="colorSurface">@color/card_light</item>
        <item name="colorOnSurface">@color/card_light</item>
    </style>












    <!-- Large Font Variant -->
    <style name="Theme.BRaVeN.FontLarge" parent="Theme.BRaVeN">
        <item name="textAppearanceHeadline5">@style/TextAppearance.BRaVeN.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.BRaVeN.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.BRaVeN.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.BRaVeN.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BRaVeN.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BRaVeN.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.BRaVeN.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.BRaVeN.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.BRaVeN.Overline</item>
    </style>

    <!-- Override Style -->
    <style name="TextAppearance.BRaVeN.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">27sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">23sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">13sp</item>
    </style>
</resources>