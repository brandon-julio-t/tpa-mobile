<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BRaVeN" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Large Font Variant -->

    <style name="Theme.BRaVeN.FontLarge" parent="Theme.BRaVeN">
        <item name="textAppearanceBody1">@style/TextAppearance.BRaVeN.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BRaVeN.Body2</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.BRaVeN.Headline5</item>
    </style>

    <!-- Custom Font Sizes -->

    <style name="TextAppearance.BRaVeN.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.BRaVeN.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">32sp</item>
    </style>
</resources>